[flake8]
ignore =
    # Too complex
    C901,
    # Space after comma
    E231,
    # Line too long
    E501,
    # Allow inline lambda assignments
    E731,
    # Line break occurred before a binary operator
    W503
exclude =
    .git,
    .venv,
    __pycache__,
    data,
    docs,
    erp/migrations,
    fuzzywuzzy_custom,
    node_modules
max-line-length = 120
max-complexity = 10
per-file-ignores =
    test_*.py: F401,F811
