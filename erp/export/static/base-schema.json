      "role": "author"
    },
    {
      "title": "Nicolas Perriault",
      "email": "nicolas@perriault.net",
      "organisation": "MTES-MCT",
      "role": "author"
    },
    {
      "title": "Marie-Laure Vernay",
      "email": "marielaure.vernay@beta.gouv.fr",
      "organisation": "MTES-MCT",
      "role": "author"
    },
    {
      "title": "Antonin Morel",
      "email": "antonin.morel@beta.gouv.fr",
